{
  "name": "mi18n",
  "version": "0.3.1",
  "description": "A simple yet robust i18n solution for universal JavaScript apps.",
  "main": "dist/mi18n.min.js",
  "scripts": {
    "test": "npm run test",
    "build": "webpack --progress -p --colors",
    "start": "webpack -d | webpack-dev-server -d --hot --inline --progress --port 6061",
    "tag": "babel-node tools/run tag",
    "prepublish": "npm run tag"
  },
  "repository": {
    "url": "http://github.com/draggable/mi18n",
    "type": "git"
  },
  "keywords": [
    "i18n"
  ],
  "author": "Kevin Chappell <kevin.b.chappell@gmail.com> (http://kevin-chappell.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Draggable/mi18n/issues"
  },
  "homepage": "https://github.com/Draggable/mi18n",
  "babel": {
    "presets": [
      "es2015",
      "stage-3"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-node6": "^11.0.0",
    "babel-preset-stage-3": "^6.17.0",
    "babel-register": "^6.14.0",
    "chai": "^3.5.0",
    "eslint": "^3.8.1",
    "eslint-config-google": "^0.7.0",
    "json-update": "^3.0.0",
    "mocha": "^3.0.2",
    "replace-in-file": "^2.0.1",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.15.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "google"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "quote-props": 0,
      "no-unused-vars": 1,
      "no-console": 0,
      "new-cap": 0,
      "strict": 0,
      "arrow-parens": 0,
      "no-underscore-dangle": 0,
      "comma-dangle": 0,
      "no-use-before-define": 0,
      "eol-last": 0,
      "quotes": [
        2,
        "single"
      ]
    }
  }
}
